{% layout none %}
<style type='text/css'>
  .newsletter-container img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    pointer-events: none;
  }

  .klaviyo-form.klaviyo-form.klaviyo-form {
    margin: auto !important;
  }
  form > div {
    padding: 0 10px !important;
  }

  form > div > div:nth-child(3) > div {
    padding-right: 0 !important;
  }

  input[aria-label="EMAIL"] {
    padding: 0 !important;
    text-indent: 4px !important;
  }
</style>

{% assign background_image = section.settings.background_image %}

{% if background_image != blank %}
  <div class='newsletter-container twcss-fixed twcss-top-0 twcss-left-0 twcss-h-screen twcss-w-full twcss-pointer-events-none twcss-flex twcss-items-center twcss-justify-center '>
    {{ background_image | img_url: 'master' | img_tag: 'none' }}
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ]
}
{% endschema %}
