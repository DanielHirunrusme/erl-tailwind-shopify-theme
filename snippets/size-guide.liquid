{% if product.metafields.product.size_guide.value.size > 0 %}
  <table class=' twcss-border-2 twcss-p-4 '>
    {% for row in product.metafields.product.size_guide.value %}
      <tr>
        {% if row.size == 1 %}
          {% for col in row %}
            <th colspan='999'>{{ col | last }}</th>
          {% endfor %}
        {% else %}
          {% for col in row %}
            <td class=' twcss-border-b-2 '>{{ col | last }}</td>
          {% endfor %}
        {% endif %}
      </tr>
    {% endfor %}
  </table>
{% else %}
  {{ block.settings.content }}
{% endif %}
